	<div class="topic__img">
		<a href="artikel.html">
			{{#eq @index compare=4}}
			<img src="https://asset.kompas.com/crop/0x0:0x0/353x247/data/photo/{{img}}" alt="{{title}}">
			{{else}}
			{{#eq @index compare=8}}
			<img src="https://asset.kompas.com/crop/0x0:0x0/353x247/data/photo/{{img}}" alt="{{title}}">
			{{else}}
			{{#eq @index compare=12}}
			<img src="https://asset.kompas.com/crop/0x0:0x0/353x247/data/photo/{{img}}" alt="{{title}}">
			{{else}}
			<img src="https://asset.kompas.com/crop/0x0:0x0/82x82/data/photo/{{img}}" alt="{{title}}">
			{{/eq}}
			{{/eq}}
			{{/eq}}
