<!DOCTYPE html>
<html lang="en">
	{{> head}}

<body class="wp">
	<!-- header -->
	{{> header}}
	
	<!-- nav -->
	{{>nav section="Home"}}
	
	<div class="row clearfix">
		<div class="container clearfix">
		
			<!-- ads top -->
			{{> ads_top}}
			
			<section class="competition clearfix">
				<h3 class="title">
					<span>MotoGP</span>
				</h3>
			</section>

			<!-- tabs -->
			<section class="tab -page box clearfix">
				<div class="tab__menu clearfix">
					<div class="tab__item">
						<a href="kompetisi-detail.html" class="tab__link"><div class="title"><span>Balapan</span></div></a>
					</div>
					<div class="tab__item">
						<a href="kompetisi-klasemen.html" class="tab__link -active"><div class="title"><span>Klasemen</span></div></a>
					</div>
				</div>
				<div class="tab__content">
					<div class="tab__content__item">

						<!-- standing -->
						<section class="tab__content__box standing table -detail box clearfix">
							{{> widget_table_motogp channel=channel.balap.motogp index_start=0 index_end=10 detail=true league="Pembalap"}}
						</section>

						<!-- standing -->
						<section class="tab__content__box standing table -detail box clearfix">
							{{> widget_table_motogp_team channel=channel.balap.motogp index_start=0 index_end=10 detail=true league="Konstruktor"}}
						</section>

					</div>
				</div>
			</section>


			<!-- ads bottom -->
			{{> ads_skin}}
			
		</div>
	</div>
	
	<!-- footer -->
	{{> footer}}
	
	<!-- ads horizontal -->
	{{> ads_tower}}

	{{> js}}
	
</body>
</html>
