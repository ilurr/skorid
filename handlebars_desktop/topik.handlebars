<!DOCTYPE html>
<html lang="en">
	{{> head}}

<body>
	<!-- header -->
	{{> header section_name="Bola"}}
	
	<!-- ads skin -->
	{{!> ads_skin}}
	
	<div class="row clearfix">
		<div class="container clearfix">
			<!-- ads top -->
			{{> ads_top}}
		</div>
	</div>

	<!-- belt schedule -->
	<div class="row belt clearfix">
		<div class="container clearfix">
			<div class="col-offset-fluid clearfix">
				<div class="col-bs10-10">
				
					<!-- schedule -->
					<section class="schedule box clearfix">
						<div class="schedule__container">
							<div class="schedule__wrap js--schedule">
								<div class="schedule__item">
									{{> widget_salat channel=channel.bola.fixtures.inggris.rounds.[0] index_start=0 index_end=4}}
								</div>
								<div class="schedule__item">
									{{> widget_salat channel=channel.bola.fixtures.inggris.rounds.[1] index_start=0 index_end=4}}
								</div>
							</div>
						</div>
					</section>
					
				</div>
			</div>
		</div>
	</div>
	
	<!-- title -->
	<div class="row clearfix">
		<div class="container clearfix">
			<div class="col-offset-fluid clearfix">
				<div class="col-bs10-10">
			
					<div class="title3">
						<span>Topik Khusus</span>
					</div>

				</div>
			</div>
		</div>
	</div>
	
	<!-- content -->
	<div class="row clearfix">
		<div class="container clearfix">
			<div class="col-offset-fluid clearfix">
				
				<div class="col-bs10-7">
				
					<!-- topic list -->
					<section class="hl -topic clearfix">
						{{> headline_topic channel=channel.bola.headline total=1 index_start=0 index_end=1 noimg=true}}
					</section>
									
					<section class="hl -topic clearfix">
						{{> headline_topic channel=channel.bola.headline total=1 index_start=1 index_end=2}}
					</section>
									
					<section class="hl -topic clearfix">
						{{> headline_topic channel=channel.bola.headline total=1 index_start=2 index_end=3}}
					</section>
									
					<section class="hl -topic clearfix">
						{{> headline_topic channel=channel.bola.headline total=1 index_start=3 index_end=4}}
					</section>
									
					<section class="hl -topic clearfix">
						{{> headline_topic channel=channel.bola.headline total=1 index_start=0 index_end=1}}
					</section>
									
					<section class="hl -topic clearfix">
						{{> headline_topic channel=channel.bola.headline total=1 index_start=1 index_end=2}}
					</section>
									
					<section class="hl -topic clearfix">
						{{> headline_topic channel=channel.bola.headline total=1 index_start=2 index_end=3}}
					</section>
									
					<section class="hl -topic clearfix">
						{{> headline_topic channel=channel.bola.headline total=1 index_start=3 index_end=4}}
					</section>
									
					{{> paging}}
					
				</div>
				
				<div class="col-bs10-3">
				
					<!-- ads giant -->
					{{> ads_giant}}
					
					<!-- most -->
					<section class="most box clearfix">
						<h3 class="title -center"><span>Trending</span></h3>
						<div class="most__wrap">
							{{> most channel=channel.bola.latest total=8 index_start=2 index_end=10}}
						</div>
					</section>
					
					<!-- ads square -->
					{{> ads_square}}
					
					<!-- standing -->
					<section class="standing box clearfix">
						<div class="standing__wrap js--standing">
							<div class="standing__item">
								{{> widget_valas channel=channel.bola.team.inggris index_start=0 index_end=10 league="Inggris"}}
							</div>
							<div class="standing__item">
								{{> widget_valas channel=channel.bola.team.inggris index_start=0 index_end=10 league="Indonesia"}}
							</div>
							<div class="standing__item">
								{{> widget_valas channel=channel.bola.team.inggris index_start=0 index_end=10 league="Spanyol"}}
							</div>
							<div class="standing__item">
								{{> widget_valas channel=channel.bola.team.inggris index_start=0 index_end=10 league="Italia"}}
							</div>
							<div class="standing__item">
								{{> widget_valas channel=channel.bola.team.inggris index_start=0 index_end=10 league="Jerman"}}
							</div>
						</div>
					</section>
					
				</div>
			</div>
		</div>
	</div>

	<!-- footer -->
	{{> footer}}
	
	<!-- ads horizontal -->
	{{> ads_horizontal}}

	{{> js}}
	
</body>
</html>
