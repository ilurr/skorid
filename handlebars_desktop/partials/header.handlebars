<header class="header">
	<div class="header__top">
		<div class="row container clearfix">
			<div class="col-offset-fluid clearfix">
				<div class="col-bs12-9">
					<div class="logo">
						<a href="index.html">
							<img src="./asset/images/logo-skorid.jpg" alt="Skor.id">
						</a>
					</div>
				</div>
				<div class="col-bs12-3">
					<form action="search.html" class="search__bar">
						<input type="text" placeholder="Cari" class="search__input">
						<input type="submit" name="submit" class="search__submit">
						<span class="icon icon-search"></span>
					</form>
				</div>
			</div>
		</div>
	</div>
	<div class="header__bottom">
		<div class="row container clearfix">
			<div class="col-offset-fluid clearfix">
				<div class="col-bs10-10">
					{{#if navCustom}}
					{{>nav section=section_name navCustom=navCustom}}
					{{else}}
					{{>nav section=section_name navCustom=MainMenu}}
					{{/if}}
				</div>
			</div>
		</div>
	</div>
</header>
